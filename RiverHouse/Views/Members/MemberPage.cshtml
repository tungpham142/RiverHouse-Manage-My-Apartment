@model RiverHouse.Models.Member
@{
    ViewBag.Title = "Member Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<table id="members" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>My Event</th>    
            <th>Created On</th>
            <th>Total Guest</th>
            <th>Total Amount</th>  
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#members").DataTable({
                ajax: {
                    url: "/api/events/" + @Model.Id,
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, member) {
                            return "<a href='/events/edit/" + member.id + "'>" + member.name + "</a>";
                        }
                    },
                    {
                        data: "dateCreated"
                    },
                    {
                        data: "guestCount"
                    },
                    {
                        data: "totalAmount"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-event' data-event-id='" + data + "'>Delete</button>";
                        }
                    }
                ]
            });

            $("#members").on("click", ".js-event",
                function () {
                    var button = $(this);

                    bootbox.confirm("Are you sure you want to delete this event?",
                        function (result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/events/" + button.attr("data-event-id"),
                                    method: "DELETE",
                                    success: function () {
                                        table.row(button.parents("tr")).remove().draw();
                                    }
                                });
                            }
                        });
                });
        });
    </script>
}
